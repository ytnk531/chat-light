<div id="<%= dom_id message %>" data-messages-target="message" class="scaffold_record">
  <div>
    <div>
      <span>
        <%= message.user.name %>
      </span>
      <span class="ml-2 text-sm text-gray-400">
        <%= message.created_at.strftime("%H:%M") %>
      </span>
    </div>
    <div class="mt-2 bg-gray-200 px-3 py-2 ">
      <p>
        <%= message.content %>
      </p>
    </div>
  </div>
</div>
